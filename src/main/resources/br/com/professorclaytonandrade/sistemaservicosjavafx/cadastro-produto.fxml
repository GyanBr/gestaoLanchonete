<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.professorclaytonandrade.sistemaservicosjavafx.controller.ProdutoController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="772.0" spacing="10.0">
            <children>
                <Label styleClass="title-label" text="Gerenciamento de Produtos">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <Label text="Descrição:" />
                            <TextField fx:id="descricaoField" prefWidth="300.0" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Preço:" />
                            <TextField fx:id="precoField" prefWidth="150.0" />
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <Label text="Quantidade em Estoque:" />
                            <TextField fx:id="quantidadeField" prefWidth="150.0" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Markup (%):" />
                            <TextField fx:id="markupField" prefWidth="150.0" />
                        </VBox>
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="salvarButton" mnemonicParsing="false" text="Salvar" />
                        <Button fx:id="limparButton" mnemonicParsing="false" text="Limpar" />
                        <Button fx:id="excluirButton" mnemonicParsing="false" text="Excluir" />
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" bottom="10.0" />
                    </VBox.margin>
                </HBox>

                <TableView fx:id="produtosTable" prefHeight="300.0" prefWidth="772.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="descricaoColumn" prefWidth="300.0" text="Descrição" />
                        <TableColumn fx:id="precoColumn" prefWidth="100.0" text="Preço" />
                        <TableColumn fx:id="quantidadeColumn" prefWidth="150.0" text="Qtd. Estoque" />
                        <TableColumn fx:id="markupColumn" prefWidth="100.0" text="Markup (%)" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>